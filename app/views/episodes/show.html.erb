<h1><%= "Episode #{@episode.number} - #{@episode.date.strftime("%B %d, %Y")}" %></h1>

<% if @guests.count > 0 %>
	<p>Average Rating: <%= @average_rating %></p>
	Guests:
	<ul>
		<% @guests.each do |guest| %>
			<li><%= link_to guest.name, guest_path(guest) %></li>
		<% end %>
	</ul>
<% else %>
	<p>No guests on this episode yet.</p>
<% end %>
<p><%= link_to 'All Episodes', episodes_path %></p>
