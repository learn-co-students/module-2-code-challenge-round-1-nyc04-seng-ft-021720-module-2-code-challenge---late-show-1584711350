<h1>New Appearance Form</h1>
<%if @appearance.errors.any? %>
    <% @appearance.errors.full_messages.each do |error| %>
    <ul>
        <li><%= error %></li>
    </ul>
    <% end %>
<% end %>
<%=form_for @appearance do |f| %>
<%= f.label :guest %>
<%= f.collection_select :guest_id, Guest.all, :id, :name %>
<br>
<%= f.label :episode %>
<%= f.collection_select :episode_id, Episode.all, :id, :number %>
<br>
<%= f.label "Rating (from 1 to 5)" %>
<%= f.number_field :rating %>
<br>
<%= f.submit %>
<% end %>