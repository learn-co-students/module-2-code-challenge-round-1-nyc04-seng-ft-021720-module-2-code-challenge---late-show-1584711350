<%= form_for @appearance do |f| %>
  <%= f.label 'Select Guest' %>
  <%= f.collection_select :guest_id, Guest.all, :id, :name %><br>
  
  <%= f.label 'Select Episode' %>
  <%= f.collection_select :episode_id, Episode.all, :id, :date %><br>

  <%= f.label 'Rating 1 - 5' %>
  <%= f.number_field :rating, min: 1, max: 5 %><br><%= "Rating #{@appearance.errors[:rating].first}" if @appearance.errors.any? %><br>
  #number_field will already restrict
  <%= f.submit %>
<% end %>